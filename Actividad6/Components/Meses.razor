@page "/meses"
@rendermode InteractiveServer

<div class="container mt-4">
    <h2 class="mb-4">Conocer los días del mes</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="mes" class="form-label">Mes</label>
                <input type="number" id="mes" class="form-control" @bind="mes" placeholder="Ingresa el mes..." />
            </div>

            <div class="mb-3">
                <label for="año" class="form-label">Año</label>
                <input type="number" id="año" class="form-control" @bind="año" placeholder="Ingresa el año..." />
            </div>

            <button @onclick="Calcular" class="btn btn-primary">Calcular</button>
        </div>

        <div class="col-md-12 mt-4">
            <h3 class="mt-3">Resultado</h3>
            <p class="fs-4">@result</p>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        padding: 10px 20px;
        font-size: 16px;
    }

    .form-control {
        padding: 10px;
        font-size: 16px;
    }

    p {
        font-size: 28px;
        color: #212529;
    }
</style>

@code {
    private int mes { get; set; }
    private int año { get; set; }
    private string result { get; set; } = string.Empty;

    private void Calcular()
    {
        int dias;
        if (mes == 2)
        {
            if ((año % 4 == 0 && año % 100 != 0) || (año % 400 == 0))
                dias = 29;
            else
                dias = 28;
        }
        else if (mes == 4 || mes == 6 || mes == 9 || mes == 11)
        {
            dias = 30;
        }
        else
        {
            dias = 31;
        }
        result = $"El mes {mes} del año {año} tiene {dias} días";
    }
}
